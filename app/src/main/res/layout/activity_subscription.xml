<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subscription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/nosub"
       >


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/subimg" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Your Purchased Subscription will be shown here"
           android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="18sp" />

        <Button
            android:id="@+id/requestnowid"
            android:layout_width="195dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="#090909"
            android:text="Request now"
            android:textColor="#FFFFFF" />



    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/sub">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/skyblue"
            app:cardCornerRadius="10dp"
           >

            <TextView
                android:id="@+id/subtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"

                android:text="@string/months"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/subdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="100dp"

                android:layout_marginRight="20dp"
                android:gravity="end"


                android:text="Valid till 5 Jan 2021"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

